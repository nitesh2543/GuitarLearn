<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseTheme">

    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="selectableItemBackground">@color/colorDivider</item>
        <item name="selectableItemBackgroundBorderless">@color/colorSecondaryText</item>
        <item name="colorControlHighlight">@color/colorTextIcon</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">

    </style>

    <style name="AppTheme.TextAppearance.Design.TabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:tabStripEnabled">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>

    </style>
    <!-- for text -->
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">17sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>